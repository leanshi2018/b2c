    <!-- 根据ID查询 -->
    <select id="find" resultMap="ShopCommonArticleResultMap">
        SELECT
        <include refid="base_column"/>
        FROM SHOP_COMMON_ARTICLE
        WHERE ID=#{id,jdbcType=BIGINT}
    </select>

    <!-- 查询所有 -->
    <select id="findAll" resultMap="ShopCommonArticleResultMap">
        SELECT
        <include refid="base_column"/>
        FROM SHOP_COMMON_ARTICLE
    </select>

