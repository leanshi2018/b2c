    <!-- 根据ID查询 -->
    <select id="find" resultMap="RdBonusMasterResultMap">
        SELECT	<include refid="base_column" />
        FROM	rd_bonus_master
        WHERE	ID_RD_BONUS_MASTER=#{idRdBonusMaster,jdbcType=INTEGER}
    </select>

