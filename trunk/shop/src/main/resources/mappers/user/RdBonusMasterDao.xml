        </if>
        <if test="chargeService != null">
            AND CHARGE_SERVICE = #{chargeService,jdbcType=DECIMAL}
        </if>
        <if test="bonusSum != null">
            AND BONUS_SUM = #{bonusSum,jdbcType=DECIMAL}
        </if>
    </sql>

