<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.framework.loippi.dao.product.ShopGoodsEvaluateKeywordsDao">
	
	<resultMap id="ShopGoodsEvaluateKeywordsResultMap" type="com.framework.loippi.entity.product.ShopGoodsEvaluateKeywords">
		<id property="id" column="id"  />
		<result property="keywords" column="keywords" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 id ,keywords 
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{keywords}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="id != null and id != ''">
			AND id = #{id,jdbcType=BIGINT}
		</if>
		<if test="keywords != null and keywords != ''">
			AND keywords like concat('%',#{keywords},'%')
		</if>
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null">
			id = #{id,jdbcType=BIGINT},
		</if>
		<if test="keywords != null and keywords != ''">
			keywords = #{keywords,jdbcType=VARCHAR},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="ShopGoodsEvaluateKeywordsResultMap">
		SELECT	<include refid="base_column" />
		FROM	SHOP_GOODS_EVALUATE_KEYWORDS
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="ShopGoodsEvaluateKeywordsResultMap">
		SELECT	<include refid="base_column" />
		FROM	SHOP_GOODS_EVALUATE_KEYWORDS
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM SHOP_GOODS_EVALUATE_KEYWORDS
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.framework.loippi.entity.product.ShopGoodsEvaluateKeywords">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT SHOP_GOODS_EVALUATE_KEYWORDS 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.framework.loippi.entity.product.ShopGoodsEvaluateKeywords">
		UPDATE	SHOP_GOODS_EVALUATE_KEYWORDS
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM SHOP_GOODS_EVALUATE_KEYWORDS
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM SHOP_GOODS_EVALUATE_KEYWORDS
		WHERE	ID	IN
    	<foreach item="ShopGoodsEvaluateKeywordsId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{ShopGoodsEvaluateKeywordsId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="ShopGoodsEvaluateKeywordsResultMap">
		SELECT	<include refid="base_column" />
		FROM 	SHOP_GOODS_EVALUATE_KEYWORDS
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="ShopGoodsEvaluateKeywordsResultMap">
		SELECT
		<include refid="base_column" />
		FROM SHOP_GOODS_EVALUATE_KEYWORDS
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
</mapper> 