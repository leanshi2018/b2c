<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.framework.loippi.dao.product.ShopGoodsEvaluateLikeDao">
	
	<resultMap id="ShopGoodsLikeResultMap" type="com.framework.loippi.entity.product.ShopGoodsEvaluateLike">
		<id property="id" column="id"  />
		<result property="gevalId" column="geval_id" />
		<result property="memberId" column="member_id" />
		<result property="likeType" column="like_type" />
	</resultMap>
	
	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		 id ,geval_id ,member_id ,like_type
	</sql>
	
	<sql id="base_value_column">
		 #{id},#{gevalId},#{memberId},#{likeType}
	</sql>
	
	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="id != null and id != ''">
			AND id = #{id,jdbcType=BIGINT}
		</if>
		<if test="gevalId != null">
			AND geval_id = #{gevalId,jdbcType=BIGINT}
		</if>
		<if test="memberId != null and memberId != ''">
			AND member_id = #{memberId,jdbcType=BIGINT}
		</if>
		<if test="likeType != null and likeType != ''">
			AND like_type = #{likeType,jdbcType=INTEGER}
		</if>
	</sql>
	
	<!-- 设置语句 -->
	<sql id="set_column">
		<if test="id != null">
			id = #{id,jdbcType=BIGINT},
		</if>
		<if test="gevalId != null">
			geval_id = #{gevalId},
		</if>
		<if test="memberId != null">
			member_id = #{memberId,jdbcType=BIGINT},
		</if>
		<if test="likeType != null">
			like_type = #{likeType,jdbcType=INTEGER},
		</if>
	</sql>

	<!-- 根据ID查询 -->
	<select id="find" resultMap="ShopGoodsLikeResultMap">
		SELECT	<include refid="base_column" />
		FROM	SHOP_GOODS_EVALUATE_LIKE
		WHERE	ID=#{id,jdbcType=BIGINT}
	</select>
	
	<!-- 查询所有 -->
	<select id="findAll" resultMap="ShopGoodsLikeResultMap">
		SELECT	<include refid="base_column" />
		FROM	SHOP_GOODS_EVALUATE_LIKE
	</select>
	
	<!-- 统计记录数 -->
	<select id="count" resultType="long">
		SELECT COUNT(*) FROM SHOP_GOODS_EVALUATE_LIKE
		<where> 
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 插入 -->
	<insert id="insert" parameterType="com.framework.loippi.entity.product.ShopGoodsEvaluateLike">
		<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">  
	          SELECT LAST_INSERT_ID() AS ID    
	    </selectKey>  
		INSERT SHOP_GOODS_EVALUATE_LIKE 
				(<include refid="base_column" /> )
		VALUES	(<include refid="base_value_column" />)
	</insert>
	
	<!-- 修改 -->
	<update id="update" parameterType="com.framework.loippi.entity.product.ShopGoodsEvaluateLike">
		UPDATE	SHOP_GOODS_EVALUATE_LIKE
		<set>
			<include refid="set_column" />
		</set>
		WHERE	ID = #{id,jdbcType=BIGINT}
	</update>
	
	<!-- 删除单条记录 -->
	<delete id="delete">
		DELETE	FROM SHOP_GOODS_EVALUATE_LIKE
		WHERE	ID = #{id,jdbcType=BIGINT}
	</delete>
	
	<!-- 删除多条记录-->
	<delete id="deleteAll">
		DELETE	FROM SHOP_GOODS_EVALUATE_LIKE
		WHERE	ID	IN
    	<foreach item="ShopGoodsLikeId" index="index" collection="ids" open="(" separator="," close=")">
	  		#{ShopGoodsLikeId} 
		</foreach>
	</delete>
	
	<!-- 根据参数查询列表-->
	<select id="findByParams" resultMap="ShopGoodsLikeResultMap">
		SELECT	<include refid="base_column" />
		FROM 	SHOP_GOODS_EVALUATE_LIKE
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
	<!-- 分页查询-->
	<select id="findByPage" resultMap="ShopGoodsLikeResultMap">
		SELECT
		<include refid="base_column" />
		FROM SHOP_GOODS_EVALUATE_LIKE
		<where> 1=1
			<include refid="where_column" />
		</where>
	</select>
	
</mapper> 